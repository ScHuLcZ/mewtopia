/*Contact*/

* {
    box-sizing: border-box;
  }
  
  input[type=text], select, textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    resize: vertical;
  }
  input[type=password], select, textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    resize: vertical;
  }
  
  input[type=submit] {
    background-color: #EC7029;
    color: white;
    padding: 10px 30px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    float: right;
    
   
  }
  label {
    padding: 10px 10px 10px 0;
    display: inline-block;
  }
  

  input[type=submit]:hover {
    background-color: #bb5419;
  }
  
  button[type=button]:hover {
    background-color: #bb5419;
  }

  button[type=button] {
    background-color: #EC7029;
    color: white;
    padding: 12px 30px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    float: left;
  
    
  }
  
  .container {
    border-radius: 5px;
    background-color: #ffdcc7;
    padding: 20px;
    width: 50%;
    text-align: left;
    margin: auto;
  }
  
  .col-25 {
    float: left;
    width: 25%;
    margin-top: 6px;
  }
  
  .col-75 {
    float: left;
    width: 75%;
    margin-top: 6px;
  }
  
  /* Clear floats after the columns */
  .row:after {
    content: "";
    display: table;
    clear: both;
  }
  
  /* Responsive layout - when the screen is less than 600px wide, make the two columns stack on top of each other instead of next to each other */
  @media screen and (max-width: 600px) {
    .col-25, .col-75, input[type=submit], button[type=button]  {
      width: 100%;
      margin-top: 0;
    }
  }
/*Contact end*/


/* Top Menu */

img#logoup{
    height: 60px; 
    margin-top: 5px;
    margin-left: 15px;
    
}

ul.menu {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #ffdcc7;
    top: 0;
    width: 100%;
}

ul.menu li {float: right; }

ul.menu li a {
    display: block;
    color: #bb5419;
    text-align: center;
    padding: 25px 25px;
    text-decoration: none;  
}

ul.menu li a:hover:not(.active) {background-color: #fdc9aa;}

ul.menu li a.active {background-color: #bb5419;}
  
ul.menu li.right {float: right;}
  
@media screen and (max-width: 600px) {
    ul.menu li.right, 
    ul.menu li {float: none;}
}


